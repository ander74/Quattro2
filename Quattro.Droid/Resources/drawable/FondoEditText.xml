<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false" android:state_focused="true" android:state_selected="false">
    <shape>
      <stroke android:width="0.1dp" android:color="#ff000000"/>
      <solid android:color="#ffbbffbb"/>
      <corners android:radius="0dp" />
    </shape>
  </item>
  <item android:state_pressed="false" android:state_focused="false" android:state_selected="false">
    <shape>
      <stroke android:width="0.1dp" android:color="#ff000000" />
      <solid android:color="#ffffffff"/>
      <corners android:radius="0dp"/>
    </shape>
  </item>

</selector>